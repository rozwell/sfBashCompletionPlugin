<?xml version="1.0" encoding="UTF-8"?>
<package packagerversion="1.4.1" version="2.0"
   xmlns="http://pear.php.net/dtd/package-2.0"
   xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
   http://pear.php.net/dtd/tasks-1.0.xsd http://pear.php.net/dtd/package-2.0
   http://pear.php.net/dtd/package-2.0.xsd">
  <name>sfBashCompletionPlugin</name>
  <channel>plugins.symfony-project.org</channel>
  <summary>Bash completion for symfony tasks.</summary>
  <description>Add bash completion for symfony tasks to your system.</description>
  <lead>
    <name>Taras Bogach</name>
    <user>tarasbogach</user>
    <email>taras.bogach@gmail.com</email>
    <active>yes</active>
  </lead>
  <date>2012-06-10</date>
  <version>
    <release>1.0.3</release>
    <api>1.0.0</api>
  </version>
  <stability>
    <release>stable</release>
    <api>stable</api>
  </stability>
  <license uri="http://www.gnu.org/copyleft/lesser.html">LGPL</license>
  <notes>-</notes>
 
  <contents>
		<dir name="/">
			<dir name="config">
				<file role="data" name="sfBashCompletionPluginConfiguration.class.php" />
			</dir>
			<dir name="data">
				<file role="data" name="icon.png" />
				<file role="data" name="icon.svg" />
			</dir>
			<dir name="lib">
				<dir name="task">
					<file role="data" name="bashCompletionTask.class.php" />
				</dir>
			</dir>
			<file role="data" name="README" />
			<file role="data" name="LICENSE" />
		</dir>
	</contents>
 
  <dependencies>
		<required>
			<php>
				<min>5.0.0</min>
			</php>
			<pearinstaller>
				<min>1.4.1</min>
			</pearinstaller>
			<package>
				<name>symfony</name>
				<channel>pear.symfony-project.com</channel>
				<min>1.3.0</min>
				<max>1.5.0</max>
				<exclude>1.5.0</exclude>
			</package>
		</required>
	</dependencies>
 
  <phprelease>
	</phprelease>
 
	<changelog>
		<release>
			<version>
				<release>1.0.3</release>
				<api>1.0.0</api>
			</version>
			<stability>
				<release>stable</release>
				<api>stable</api>
			</stability>
			<license uri="http://www.gnu.org/copyleft/lesser.html">LGPL</license>
			<license>LGPL</license>
			<date>2012-06-10</date>
			<notes>fix sumfony -> symfony, nowdoc usage avoided</notes>
		</release>
		<release>
			<version>
				<release>1.0.2</release>
				<api>1.0.0</api>
			</version>
			<stability>
				<release>stable</release>
				<api>stable</api>
			</stability>
			<license uri="http://www.gnu.org/copyleft/lesser.html">LGPL</license>
			<license>LGPL</license>
			<date>2012-05-17</date>
			<notes>Docs update</notes>
		</release>
	</changelog>
</package>